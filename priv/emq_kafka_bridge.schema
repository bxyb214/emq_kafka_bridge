%%-*- mode: erlang -*-
%% Kafka config mapping

{mapping, "kafka_bridge.server", "emq_kafka_bridge.server", [
  {default, "127.0.0.1"},
  {datatype, string}
]}.

{mapping, "kafka_bridge.port", "emq_kafka_bridge.port", [
  {default, 9092},
  {datatype, integer}
]}.

{mapping, "kafka_bridge.topic", "emq_kafka_bridge.topic", [
  {default, "emqtt"},
  {datatype, string}
]}.